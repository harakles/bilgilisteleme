@using BilgiListeleme.Models
@using PagedList
@using PagedList.Mvc
@model PagedList.IPagedList<TBLCustomerVdsList>
@{
    ViewBag.Title = "Admin Login Page";
}
<div class="container">
    <h2>Cats Müşteri Paneli</h2>
    <div class="panel panel-default">
        <div class="panel-body">
            <div>
                <br><br><br>
                <div>
                    <label for="exampleDataList" class="form-label">
                        @using (Html.BeginForm("Index", "", FormMethod.Get))
                        {
                            <b>Data Giriniz: &nbsp; </b> @Html.TextBox("p")
                            <input type="submit" value="Ara" />
                            @*<div class="input-group">
                <span class="input-group-addon"><i class="glyphicon glyphicon-eye-open"></i></span>
                <input id="Ara" type="text" class="form-control" name="Ara" value="" placeholder="Değeri Giriniz">
            </div>*@
                        }
                    </label>
                </div>
                <br><br><br />

            </div>
        </div>
    </div>
</div>

<table class="table caption-top">
    <thead>
        <tr>
            <th scope="col">Id</th>
            <th scope="col">Şirket İsmi</th>
            <th scope="col">Vds İp</th>
            <th scope="col">Vds Kullanıcı Adı</th>
            <th scope="col">Vds şifre</th>
            <th scope="col">Uzak Masaüstü</th>
            <th scope="col">Güncelle</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var data in Model)
        {
            <tr>
                <th scope="row">@data.Id</th>
                <td>@data.Sirketİsmi</td>
                <td>@data.Vdsİp</td>
                <td>@data.VdsName</td>
                <td>@data.VdsPassword</td>
                <td><a href="/Home/RemoteDesk/@data.RemoteDesktopId" class="btn btn-primary" type="button">Uzak Masaüstü</a></td>
                <td><a href="/UzakDesktop/Sil/@data.Id" class="btn btn-danger" type="button">Sil</a></td>
            </tr>
        }
    </tbody>
</table>
@Html.PagedListPager((IPagedList)Model, Sayfa => Url.Action("Index", new { Sayfa }))


