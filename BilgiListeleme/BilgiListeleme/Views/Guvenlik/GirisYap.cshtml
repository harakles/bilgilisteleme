<body>
    <div class="signinform">
        <!-- container -->
        <div class="container">
            <!-- main content -->
            <div class="w3l-form-info">
                <div class="w3_info">
                    <h2>Giriş Yap</h2>
                    @using (Html.BeginForm("GirisYapp", "Guvenlik", FormMethod.Post))
                    {
                        <div class="input-group">
                            <span><i class="fas fa-user" aria-hidden="true"></i></span>
                            <input type="text" placeholder="Kullanıcı Adını Giriniz" required="" name="AdminUserName">
                        </div>
                        <div class="input-group">
                            <span><i class="fas fa-key" aria-hidden="true"></i></span>
                            <input type="Password" placeholder="Şifre" required="" name="AdminPw">
                        </div>
                        <div class="form-row bottom">
                            <div class="form-check">
                                <input type="checkbox" id="remenber" name="remenber" value="remenber">
                                <label for="remenber"> Beni Hatırla?</label>
                            </div>
                            <a href="#url" class="forgot">Şifremi Unuttum?</a>
                        </div>
                        <button class="btn btn-primary btn-block" type="submit">Giriş Yap</button>
                        
                    }
