<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Cats Bilişim</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
    <style>
* {box-sizing: border-box;}

        body {
            margin: 0;
            background-color:#f1f1f1;
            font-family: Arial, Helvetica, sans-serif;
        }

        .header {
            overflow: hidden;
            background-color: #ffffff;
            padding: 20px 10px;
            height: 79px;
            margin-top:-50px;

        }

.header a {
  float: left;
  color: black;
  text-align: center;
  padding: 12px;
  text-decoration: none;
  font-size: 18px;
  line-height: 25px;
  border-radius: 4px;
}

.header a.logo {
  font-size: 0px;
  font-weight: bold;
  padding: 2px;
}

.header a:hover {
  background-color: #ddd;
  color: black;
}

.header a.active {
  background-color:#ffffff;
  color: black;
  height:48px;
}

.header-right {
  float: right;
}

@*@media screen and (max-width: 500px) {
  .header a {
    float: none;
    display: block;
    text-align: left;
  }*@

  .header-right {
    float: none;
  }
}
    </style>
</head>
<body>

    <div class="center-block" style="text-align:center;">
        <a href="https://www.catsbilisim.net/" target="_blank" class="logo">
            <img src="~/Image/cats22.png" style=" height:60px" />
        </a>
    </div>

    <div class="header">
        <div class="header-left col-md-10">
            @using (Html.BeginForm("LogOut", "Home", FormMethod.Post))
            {
                <a style="float:right;" href="javascript:;" onclick="document.forms[0].submit();"><i class="glyphicon glyphicon-off"></i></a>
            }
            <a href="/Admin/Index/" style="float: right;"><i class="	glyphicon glyphicon-user"></i></a>
            <a style="float:right" href="/Home/Index/"><i class="glyphicon glyphicon-home"></i></a>

        </div>
    </div>
    <div class="container body-content">
        @RenderBody()
        <hr />

    </div>
    <footer>
        <p style="text-align:center;">&copy;Copyright  @DateTime.Now.Year Cats Bilişim Hizmetleri A.Ş Tüm Hakları Saklıdır</p>
    </footer>
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/content/bootstrap")
    @RenderSection("scripts", required: false)

</body>
</html>

